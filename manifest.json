{
  "manifest_version": 3,
  "name": "Gemini CLI Browser",
  "version": "2.2.0",
  "description": "Gemini AI - Assistant Side Panel & Transcription",
  "default_api_key": "AIzaSyAyptRmGV6VTxpRkXrROaWuex68KyBxZrc",
  "action": {
    "default_title": "Open Gemini Side Panel"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "scripting",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://accounts.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content-styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pcm-processor.js",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}